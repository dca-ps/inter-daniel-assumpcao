<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InterDanielAssumpcao" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_light</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/icons</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.InterDanielAssumpcao.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="goldText" >
        <item name="android:textColor">@color/detail_gold</item>
        <item name="android:drawableTint">@color/detail_gold</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blueTitle" >
        <item name="android:textColor">@color/title_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="description" >
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="username" >
        <item name="android:textColor">@color/title_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="pullRequestDate" >
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.InterDanielAssumpcao.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.InterDanielAssumpcao.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>